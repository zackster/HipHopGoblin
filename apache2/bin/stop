#!/bin/env python

import os

stopped = False

# Stop Apache if it is running.
for line in os.popen('ps -o pid,command -u hiphopgoblin'):
    if '/home/hiphopgoblin/webapps/django/apache2/conf/httpd.conf' in line:
        stopped = True
        os.system('kill %s' % line.split()[0])

if not stopped:
    print "Apache is not running."
